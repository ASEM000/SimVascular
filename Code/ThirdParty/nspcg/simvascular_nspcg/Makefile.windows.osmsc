F90 = ifort
OPTS =  /Zi /Ox /MD
OBJEXT = obj
AR = lib /out:
LIBEXT = .lib

#
#  Linux
#

# AR = "ar rv "

LIB_DIR = .

OBJS = nspcg1.$(OBJEXT) \
       nspcg2.$(OBJEXT) \
       nspcg3.$(OBJEXT) \
       nspcg4.$(OBJEXT) \
       nspcg5.$(OBJEXT)

%.$(OBJEXT): %.f
	$(F90) $(OPTS) -c $<

all:   $(OBJS)
	$(AR)$(LIB_DIR)/libnspcg$(LIBEXT) $(OBJS)

clean:
	rm -f *.$(OBJEXT)
	rm -f *.pdb
	rm -f *.lib

